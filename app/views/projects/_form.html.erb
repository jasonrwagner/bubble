
<%= form_for (@project) do |f| %>


  <div class="field">
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </div>

  <div class="field">
  	<%= f.label :description %><br />
  	<%= f.text_field :description %>
  </div>

  <div class="field">
  	<%= f.label :start_date %><br />
  	<%= f.text_field :start_date, :class => 'datepicker', 'data-behaviour' => 'datepicker'%>
  </div>

  <div class="field">
  	<%= f.label :end_date %><br />
  	<%= f.text_field :end_date, 'data-behaviour' => 'datepicker', 'class'=>'datepicker' %>

  	<script type="text/javascript">
      $(document).ready(function (){
        $('[data-behaviour=datepicker]').datepicker({format: 'yyyy-mm-dd'});
      });
  	</script>


  </div>

  <%= f.submit %>
  
<% end %>
