<div class='container'>
  <div class='row'>
    <div class='col-lg-5 col-md-5 col-sm-12 col-xs-12'>
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">Calendar</h3>
        </div>
        <div class="panel-body">
          <%= render "pages/calendar" %>
        </div>
      </div>
    </div>
    <div class='col-lg-4 col-md-4 col-sm-8 col-xs-12' >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><a href='/projects'>Projects</a><a href='/projects/new' class="badge badge-right">create new</a></h3>
        </div>
        <div class="panel-body no-padding">
          <table class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>Project Name</th>
                <th>Start Date</th>
                <th>End Date</th>
              </tr>
            </thead>
            <% @projects.each do |project| %>
              <tr onclick="location.href='/projects/<%= project.id %>/'">
                <td><p><%= project.name %></p></td>
                <td><p><small><%= project.start_date.strftime("%-m/%d/%Y") %></small></p></td>
                <td><p><small><%= project.end_date.strftime("%-m/%d/%Y") %></small></p></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class='col-lg-3 col-md-3 col-sm-4 col-xs-12'>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href='/profiles'>Profiles</a>
            <a href='/profiles/new' class="badge badge-right">create new</a>
          </h3>
        </div>
        <div class="panel-body no-padding">
          <table class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <% @profile.each do |profile| %>
              <tr onclick="location.href='/profiles/<%= profile.id %>/'">
                <td>
                  <p><%= profile.last_name %>, <%= profile.first_name %></p>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>